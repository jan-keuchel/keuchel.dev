std::array<int, SEQ_LEN> translate_bitset_to_arr(std::bitset<SEQ_LEN> bs) {
    std::array<int, SEQ_LEN> arr;
    for (size_t i = 0; i < bs.size(); i++) {
        arr[i] = bs[i] ? 1 : -1;
    }

    return arr;
}

